<p>
  <strong>Name:</strong>
  <%= @chatroom.name %>
</p>


<div data-behavior="messages">
  <% @messages.each do |message| %>
    <div><strong><%= message.user.name %>: </strong><%= message.content %></div>
  <% end %>
</div>

<%= form_for [@chatroom, Message.new] do |f| %>
  <%= f.text_area :content, rows: 1, class: "form-control", autofocus: true %>
<% end %>